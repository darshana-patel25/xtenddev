{% assign noindexUrls = "pages/customer-reviews,pages/no-risk-guarantee,pages/payment-options,pages/dermatologically-tested-and-cruelty-free,pages/purity-effectiveness,pages/search-results-page,pages/a1,pages/a2,pages/b1,pages/l1" | split:"," %}
{% assign noindexUrlsNz = "" | split:"," %}
{% assign noindexUrl = false %}
{% for item in noindexUrls %}
	{% if request.path contains item  %}
		<meta name="robots" content="noindex, nofollow" />
        {% assign noindexUrl = true %}
        {% break %}
	{% endif %}
{% endfor %}
{% unless shop.permanent_domain contains "xtendlife"%}
  {% for item in noindexUrlsNz %}
  	{% if request.path contains item  %}
  		<meta name="robots" content="noindex, nofollow" />
          {% assign noindexUrl = true %}
          {% break %}
  	{% endif %}
  {% endfor %}
{% endunless %}
{% if noindexUrl == false  %}
  <meta name="robots" content="index,follow">
{% endif %}