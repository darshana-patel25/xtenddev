<style>
  .info-grid h2 {
	font-size: 44px;
	text-align: center;
    }
  .section.key_feature_pdp {
	padding: 30px 0;
}
    .flex.info-grid-inner {
      display: flex;
      flex-flow: row wrap;
      justify-content: space-between;
      width: 100%;
      position: relative;
      padding-top: 15px;
       align-items: stretch; 
    }
    .flex.info-grid-inner .one-third {
      margin-bottom: 20px;
    }
  .info-grid-inner .one-half {
	margin-top: 20px;
}
    .info-grid-content {
    	border-radius: 10px;
    	padding: 30px 20px;
    	height: 100%;
    	background: #f5f5f5;
    }
    .info-grid-title {
      width:100%;
      font-family: Arimo-Bold;
      font-size: 20px;
      color: #005895;
    }
    .info-grid-info {
      display: flex;
      align-items: center;
    }
    .info-grid-img {
      margin-right: 20px;
    }
    .info-grid-link {
      margin-top: 10px;
    }
    .info-grid-desc{
      width: calc(100% - 10px);
      padding-top: 10px;
    }
    .info-grid-body{
      width: 80%;
    }
  .metafield-multi_line_text_field {
	font-size: 16px;
}
    @media only screen and (max-width: 992px){
      .info-grid .one-third {
        width:100%;
      }
    }
    @media only screen and (min-width: 768px){
    .visible_mobile{
      display: none;
     }
    }
    @media only screen and (max-width: 767px){
      .info-grid-title{
        font-size: 15.5px;
        padding-left:15px;
      }
      .info-grid-info .info-grid-desc{
        font-size: .875rem;
        width: calc(100% - 80px);
      }
      .info-grid-img{
        width:100%;
        text-align:left;
        display: flex;
        align-items: center;
      }
      .info-grid-img img{
        width: 35px;
      }
      .key_feature_pdp .info_grid{
        width: 100%;
      }
      .info-grid-body{
        width:100%; 
        text-align:left;
        margin-top:5px;
      }
      .info-grid-info .info-grid-desc{
        width:100%; 
      }
      .info-grid-info{
        flex-wrap: wrap;
      }
      .visible_desk{
        display: none;
      }
      /*.info-grid-img{
        width: 80px;
      }*/
    }
    </style>
  {% if section.settings.title != blank %}
   <div class="section key_feature_pdp">
    <div class="info-grid">
      <div class="one-whole">
        <h2>{{ section.settings.title }}</h2>
        <div class="center">{{ section.settings.description }}</div>
      </div>
      <div class="flex info-grid-inner">
        {% for block in section.blocks %}
          <div class="info_grid one-half medium-down--one-whole large-down--eight">
              <div class="info-grid-content">
                  <div class="info-grid-info">
                      <div class="info-grid-img">
                          <img src="{{ block.settings.image | img_url: '110x' }}" alt='{{ block.settings.image.alt }}'/>
                          <p class="info-grid-title visible_mobile">{{block.settings.title}}</p>
                      </div>
                    <div class="info-grid-body">
                      <div class="info-grid-title visible_desk">
                          {{block.settings.title}}
                      </div>
                    <div class="info-grid">
                      <div class="info-grid-desc">
                          {{ block.settings.description }}
                    </div>
                      <div class="info-grid-link">
                          <a href="{{ block.settings.link }}">{{ block.settings.linktitle }}</a>
                      </div>
                  </div>
                    </div>
                  </div>
              </div>  
          </div>
        {% endfor %} 
      </div>
    </div>
   </div>
      {% endif %}
  {% schema %}
    {
      "name": "PDP Key Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        }
      ],
      "blocks":[
        {
          "type": "image",
          "name": "Image with Text column",
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
            },
            {
              "type": "text",
              "id": "title",
              "label": "Title"
            },
            {
              "type": "richtext",
              "id": "description",
              "label": "Description"
            },
            {
              "type": "text",
              "id": "linktitle",
              "label": "Link Title"
            },
            {
              "type": "url",
              "id": "link",
              "label": "Link"
            }
          ]
        }
      ],
      "presets": [
        {
        "category": "Text",
        "name": "PDP Key Feature"
        }
      ]
    }
  {% endschema %}
  
  {% stylesheet %}
  {% endstylesheet %}
  
  {% javascript %}
  {% endjavascript %}